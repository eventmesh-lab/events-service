# Copiar este archivo a .env y llenar con valores reales

# Base de datos PostgreSQL
POSTGRES_DB=events
POSTGRES_USER=events
POSTGRES_PASSWORD=<TU_PASSWORD_AQUI>
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=<TU_PASSWORD_AQUI>
RABBITMQ_EXCHANGE=eventos.domain.events

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development

# Azure Container Registry (para despliegue en Azure)
ACR_LOGIN_SERVER=<TU_ACR>.azurecr.io
ACR_USERNAME=<TU_USERNAME_ACR>
ACR_PASSWORD=<TU_PASSWORD_ACR>

# Azure Container Instances
AZURE_RESOURCE_GROUP=<TU_GRUPO_RECURSOS>
AZURE_REGION=eastus
